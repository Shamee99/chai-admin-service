<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.shamee.system.mapper.SysRoleMapper">

    <select id="selectByUserId" parameterType="string" resultType="org.shamee.system.entity.SysRole">
        SELECT
            sr.*
        FROM sys_role sr
        LEFT JOIN sys_user_role sur ON sr.id = sur.role_id
        WHERE sur.user_id = #{userId}
    </select>

</mapper>